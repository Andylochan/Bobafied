<% include ../partials/header %>


	<div class="drop-row row">
		<h1 style="text-align: center">Edit <%= boba.name %></h1>
		<div style="width: 30%; margin: 25px auto">
			<form action="/bobas/<%= boba._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="boba[name]" value="<%= boba.name %>">	
				</div>
				<div class="form-group">
				<input class="form-control" type="number" name="boba[price]" value="<%= boba.price %>" min="0.01" step="0.01">
				</div>	
				<div class="form-group">
					<input class="form-control" type="text" name="boba[image]" value="<%= boba.image %>">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="boba[brand]" placeholder= "<%= boba.brand %>">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="boba[location]" placeholder= "<%= boba.location %>">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="boba[description]" value="<%= boba.description %>">	
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block"> Submit! </button>
				</div>
			</form>
			<a href="/bobas">Go Back</a>	
		</div>
	</div>


<% include ../partials/footer %> 